#!/usr/bin/env ruby
require 'rubygems'
require 'reality'
require 'reality/pretty_inspect'

Reality.configure :demo

class << self
  # including it ONLY into the main object, not Kernel
  include Reality::Methods

  def E(*a); entity(*a) end
  def L(*a); list(*a) end
end

require 'irb'
ARGV.shift until ARGV.empty?
IRB.start
